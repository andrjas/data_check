{
	"name": "uv",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
            "UV_VERSION": "latest",
            "DEBIAN_VERSION": "bookworm"
        }
	},
	"customizations": {
        "vscode": {
            "extensions":["ms-python.python"]
        }
    },
    "containerEnv": {
        "DISPLAY": "dummy",
        "PYTHONUNBUFFERED": "True",
        "UV_LINK_MODE": "copy",
        "UV_PROJECT_ENVIRONMENT": "/home/vscode/.venv"
    },
    "postCreateCommand": "uv sync --frozen",
    "postStartCommand": "uv run pre-commit install && uv tool install tox --with tox-uv",
	"remoteUser": "vscode"
}
